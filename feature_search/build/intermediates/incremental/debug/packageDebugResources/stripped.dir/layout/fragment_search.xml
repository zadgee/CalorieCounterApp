<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentation.search_fragment.SearchFragment"
    style="@style/backgroundColor">



    <TextView
        android:layout_marginStart="20dp"
        style="@style/textColors"
        android:layout_width="229dp"
        android:layout_height="71dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/title_font_splash"
        android:text="Search Your Favourite Food"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_gravity="end"
        android:src="@drawable/background_effects_home_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</FrameLayout>
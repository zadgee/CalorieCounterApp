<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.V21.Theme.CalorieCountingApp" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="backgroundColor" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_screens_night</item>
    </style>

    <style name="backgroundColorInAuthorizedScreens" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corners_authorized_screens_dark</item>
    </style>

    <style name="textColors" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:textColor">@color/textFieldWhite</item>
    </style>

    <style name="textFieldsStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_textfieds_dark_theme</item>
        <item name="fontFamily">@font/bentonsans_regular</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="bottomNavigationBarStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_bottom_nav_view_dark_mode</item>
        <item name="menu">@menu/navigation_menu</item>
        <item name="android:fontFamily">@font/bentonsans_bold</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/colorForActiveFragmentInNavigationBar</item>
        <item name="itemRippleColor">@color/colorForActiveFragmentInNavigationBar</item>
    </style>

    <style name="googleButtonStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_textfieds_dark_theme</item>
        <item name="android:fontFamily">@font/bentonsans_bold</item>
        <item name="android:drawableStart">@drawable/google_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">23dp</item>
        <item name="android:textColor">@color/textFieldWhite</item>
    </style>

    <style name="backgroundColorForRecyclerViewItems" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_recview_item_dark_theme</item>
    </style>
    
    <style name="searchViewStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:textColorHint">@color/whatDoYouWantToSearchDark</item>
        <item name="android:background">@drawable/searchview_dark_shape</item>
        <item name="android:searchHintIcon">@drawable/search_image_white</item>
        <item name="android:searchIcon">@drawable/search_image_white</item>
        <item name="android:editTextColor">@color/whatDoYouWantToSearchDark</item>
        <item name="android:fontFamily">@font/bentonsans_regular</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
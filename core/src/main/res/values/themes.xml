<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.V21.Theme.CalorieCountingApp" parent="Theme.Material3.DayNight.NoActionBar">
       <item name="android:statusBarColor">@color/textFieldWhite</item>
        <item name="android:navigationBarColor">@color/linear</item>
    </style>

    <style name="textColors" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/customBlack</item>
    </style>

    <style name="backgroundColor" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_screens</item>
    </style>

    <style name="backgroundColorInAuthorizedScreens" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corners_authorized_screens</item>
    </style>

    <style name="backgroundColorForRecyclerViewItems">
        <item name="android:background">@drawable/rounded_corner_for_screens</item>
    </style>

    <style name="textFieldsStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_fields</item>
        <item name="android:drawableStart">@drawable/profile</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColorForTextFieldLightTheme</item>
        <item name="android:textColorHint">@color/textColorForTextFieldLightTheme</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="bottomNavigationBarStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_bottom_nav_view</item>
        <item name="menu">@menu/navigation_menu</item>
        <item name="android:fontFamily">@font/bentonsans_bold</item>
        <item name="itemTextColor">@color/customBlack</item>
        <item name="itemRippleColor">@color/colorForActiveFragmentInNavigationBar</item>
        <item name="android:textColor">@color/customBlack</item>
        <item name="itemIconTint">@color/linear</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="googleButtonStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:background">@drawable/rounded_corner_for_fields</item>
        <item name="android:fontFamily">@font/bentonsans_bold</item>
        <item name="android:drawableStart">@drawable/google_icon</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">23dp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="searchViewStyle" parent="Base.V21.Theme.CalorieCountingApp">
        <item name="android:textColorHint">@color/whatDoYouWantToSearchLight</item>
        <item name="android:background">@drawable/searchview_light_shape</item>
        <item name="android:searchHintIcon">@drawable/search_image_orange</item>
        <item name="android:searchIcon">@drawable/search_image_orange</item>
        <item name="android:editTextColor">@color/whatDoYouWantToSearchLight</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
    </style>
    
</resources>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentation.fragment.UserProfileFragment"
    android:orientation="vertical"
    style="@style/backgroundColor"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/profileImageLayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_profile_image_shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/specificUserName"
            style="@style/textColors"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:fontFamily="@font/title_font_splash"
            android:text="Username"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="219dp"
        android:layout_height="54dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signOutButton"
            android:layout_width="219dp"
            android:layout_height="54dp"
            android:background="@drawable/button_shape"
            android:text="@string/sign_out"
            android:fontFamily="@font/title_font_splash"
            android:gravity="center"
            android:textSize="20sp"
            style="@style/textColors"
            />

    </LinearLayout>
    


</LinearLayout>